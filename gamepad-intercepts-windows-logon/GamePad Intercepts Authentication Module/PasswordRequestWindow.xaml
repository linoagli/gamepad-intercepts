<Window x:Class="GamePad_Intercepts_Authentication_Module.PasswordRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gpik="clr-namespace:GamePad_Intercepts_Keyboard.WPF;assembly=GamePad_Intercepts_Keyboard"
        mc:Ignorable="d"
        Title="PasswordRequestWindow" Height="600" Width="1200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Button x:Name="button_close" Content="" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Top" Width="40" Height="40" Background="Red" BorderBrush="{x:Null}" Click="ButtonClose_Click"/>
        <Label x:Name="label_instructions" Content="&gt; Instructions go here &lt;" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" Width="817" Height="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <PasswordBox x:Name="passwordBox_password" Margin="100,105,100,0" Height="55" FontSize="32" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top"/>
        <gpik:Keyboard x:Name="keyboard_keyboard" Margin="50,220,50,50"/>
    </Grid>
</Window>
