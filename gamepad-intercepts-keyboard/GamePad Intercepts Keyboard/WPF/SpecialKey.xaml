<UserControl x:Class="GamePad_Intercepts_Keyboard.WPF.SpecialKey"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GamePad_Intercepts_Keyboard"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid x:Name="grid_background" Background="#FF400A5D">
        <Rectangle x:Name="rectangle_enabledIndicator" Fill="#FF190A21" Height="5" Margin="5,0,5,5" Stroke="#FFC2C2C2" VerticalAlignment="Bottom"/>
        <Label x:Name="label_character" Content="*" Margin="5,5,5,15" Foreground="#FFD3CFCF" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
